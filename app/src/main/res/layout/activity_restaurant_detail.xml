<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/restaurantA_appbar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#F5F5F5"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@color/white"
            app:titleEnabled="false"
            app:contentScrim="@android:color/transparent">

            <ImageView
                android:id="@+id/restaurantA.cover_image"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:layout_collapseMode="parallax"
                android:src="@drawable/food_location_cover_image"
                android:scaleType="centerCrop"
                android:contentDescription="TODO" />

            <LinearLayout
                android:id="@+id/restaurant_header_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurantA.cover_image"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="175dp"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/fontawesome_pro_solid900"
                        android:text="\uf2f7"
                        android:textColor="#FFC107"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/restaurantA.txv_restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\t\t\t\t"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_pro_solid900"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="\uf005"
                            android:textColor="#FFC107"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_pro_solid900"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="\uf005"
                            android:textColor="#FFC107"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_pro_solid900"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="\uf005"
                            android:textColor="#FFC107"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_pro_solid900"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="\uf005"
                            android:textColor="#FFC107"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fontawesome_pro_light300"
                            android:gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="\uf005"
                            android:textColor="#FFC107"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.8 (500+ Bình luận)"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontawesome_pro_light300"
                        android:text="\uf004"
                        android:textAlignment="textEnd"
                        android:textSize="25dp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/restaurantA_toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:minHeight="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/restaurantA.btn_back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="@style/Button.CrystalClear"
                            app:icon="@drawable/ic_arrow_left_long_regular"
                            android:insetLeft="0dp"
                            android:insetBottom="0dp"
                            android:insetRight="0dp"
                            android:insetTop="0dp"
                            app:iconPadding="0dp"
                            app:iconGravity="textStart"
                            app:iconSize="30sp"
                            app:iconTint="@color/white"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/transparent">

                        <EditText
                            android:id="@+id/restaurantA.edt_search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f0f0f0"
                            android:drawableStart="@drawable/ic_lookup_light"
                            android:drawablePadding="5dp"
                            android:drawableTint="#252525"
                            android:hint="Tìm món tại..."
                            android:paddingLeft="10dp"
                            android:textColorHint="#747474"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/restaurantA.btn_search"
                            style="@style/Button.CrystalClear"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:visibility="visible"
                            app:icon="@drawable/ic_lookup_light"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="30sp"
                            app:iconTint="@color/white" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/restaurantA.btn_share"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="@style/Button.CrystalClear"
                            app:icon="@drawable/ic_share_light"
                            android:insetLeft="0dp"
                            android:insetBottom="0dp"
                            android:insetRight="0dp"
                            android:insetTop="0dp"
                            app:iconPadding="0dp"
                            app:iconGravity="textStart"
                            app:iconTint="@color/white"
                            app:iconSize="38sp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5"
                android:layout_gravity="bottom"
                app:layout_collapseMode="parallax" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/restaurantA_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            app:tabTextColor="@color/black"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/primary_color"
            app:layout_collapseMode="pin" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/restaurantA_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/restaurantActivity_button_order"
        style="@style/Button.Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:inputType="textCapWords"
        android:text="THANH TOÁN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:icon="@drawable/ic_cart_shopping_solid" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>